{
    "name": "Lap Clipboard Inserter",
    "description": "A browser extension whose purpose is to repetitively insert the system clipboard's content into a page. Uses Clipboard icons created by Freepik - Flaticon, see README.md for more details",
    "version": "1.0.0",
    "manifest_version": 3,
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "64": "icons/icon64.png"
    },
    "action": {
        "browser_style": true,
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "64": "icons/icon64.png"
        },
        "default_title": "Toggle Clipboard Inserter"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "clipboardRead"
    ],
    "background": {
        "service_worker": "bundle.js"
    }
}
